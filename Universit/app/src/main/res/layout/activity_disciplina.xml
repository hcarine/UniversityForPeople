<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:text="Nota"
        android:src="@drawable/ic_menu_manage"
        android:textSize="40sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/media_turma"
        android:text="Nota1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_below="@+id/nota"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/data_avaliacao" />

    <TextView
        android:id="@+id/nome_avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:text="Nome Avaliação"
        android:src="@drawable/ic_menu_manage"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nota" />

    <TextView
        android:id="@+id/data_avaliacao"
        android:text="Data Avaliacao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_below="@+id/nome_avaliacao"
        android:layout_toEndOf="@+id/nota"
        android:layout_marginStart="49dp" />

    <TextView
        android:id="@+id/atualizacao"
        android:text="Atualização"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16sp"
        android:gravity="right"
        android:layout_below="@+id/media_turma"
        android:layout_toEndOf="@+id/media_turma" />


</RelativeLayout>
